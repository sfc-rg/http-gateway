.container
  - @proxy_rule.errors.full_messages.each do |error|
    %p.bg-danger= error

  = form_for @proxy_rule do |f|
    .form-group
      %label Name
      = f.text_field :name, class: 'form-control', placeholder: '内部WIKI'
    .form-group
      %label Domain
      = f.text_field :domain, class: 'form-control', placeholder: 'wiki'
    .form-group
      %label Url
      = f.text_field :url, class: 'form-control', placeholder: 'http://203.178.128.99/'
    .form-group
      %label Auth Type
      = f.select :auth_type, ProxyRule.auth_types.keys, {}, class: 'form-control'
    = f.submit
